# Production Security Headers
# This file is used by Netlify and other static hosting services

/*
  # Security Headers
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()
  
  # Content Security Policy
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.auth0.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://*.auth0.com https://*.auth0.com/oauth/token https://mh-automotriz-auditoria-back-end.onrender.com; frame-src 'self' https://*.auth0.com; object-src 'none'; base-uri 'self'; form-action 'self';
  
  # Cache Control for static assets
  Cache-Control: public, max-age=31536000, immutable

# HTML files should not be cached
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# Service Worker should not be cached
/sw.js
  Cache-Control: public, max-age=0, must-revalidate

# API calls should not be cached
/api/*
  Cache-Control: no-cache, no-store, must-revalidate
  Access-Control-Allow-Origin: https://your-production-domain.com
  Access-Control-Allow-Methods: GET, POST, PUT, DELETE, OPTIONS
  Access-Control-Allow-Headers: Content-Type, Authorization
